{% extends 'base.html.twig' %}
{% block title %}{% endblock %}

{% block body %}
<div id="page-top">
	<nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
				</button>
				<a class="navbar-brand page-scroll" href="#page-top">Blog de Jim</a>
				<img id="img_logo" style="height: 50px; width: 50px;" src="{{ asset('bundles/seo/assets/img/portfolio/fullsize/stormtrooper.jpeg') }}">
			</div>
			
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav navbar-right">
					<li>
						<a class="page-scroll" href="{{ path('homepage') }}">Home</a>
					</li>
					<li>
						<a class="page-scroll" href="#services">Menu</a>
					</li>
					<li>
						<a class="page-scroll" href="#portfolio">Portfolio</a>
					</li>
					<li>
						<a class="page-scroll" href="#contact">Contact</a>
					</li>
					<li>
						<a class="page-scroll" href="{{  path('fos_user_security_login')}}">Login</a>
					</li>
				</ul>
			</div>
			<!-- /.navbar-collapse -->
		</div>
		<!-- /.container-fluid -->
	</nav>
	
	<header>
		<div class="header-content">
			<div class="header-content-inner">
				{#<h1 id="homeHeading">Your Favorite Source of Free Bootstrap Themes</h1>
				<hr>#}
				{#<p></p>
				<a href="#about" class="btn btn-primary btn-xl page-scroll">Find Out More</a>#}
			</div>
		</div>
	</header>
	<section class="bg-primary" id="about">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-lg-offset-2 text-center">
					<h2 class="section-heading">Hello World!</h2>
					<hr class="light">
					<p class="text-faded">Bienvenue sur le Blog de Jim qui Code en Chaussettes à la Wild Code School de Fontainebleau</p>
					<a href="#services" class="page-scroll btn btn-default btn-xl sr-button">Get Started!</a>
				</div>
			</div>
		</div>
	</section>
	
	<section id="services">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-md-12 text-center">
					<h2 class="section-heading">Menu</h2>
					<hr class="primary">
				</div>
			</div>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-lg-3 col-md-3 col-sm-3 text-center">
					<div class="service-box">
						<i class="fa fa-4x fa-desktop text-primary sr-icons"></i>
						<h3>Code</h3>
						<p class="text-muted">#</p>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 col-sm-3 text-center">
					<div class="service-box">
						<a href="{{ path('blog_index') }}">
							<i class="fa fa-4x fa-newspaper-o text-primary sr-icons"></i>
							<h3>Blog</h3>
						</a>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 col-sm-3 text-center">
					<div class="service-box">
						<a href="{{ path('photo') }}">
							<i class="fa fa-4x fa-camera-retro text-primary sr-icons"></i>
							<h3>Photos</h3>
						</a>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 col-sm-3 text-center">
					<div class="service-box">
						<i class="fa fa-4x fa-heart text-primary sr-icons"></i>
						<h3>Favoris</h3>
						<p class="text-muted">#</p>
					</div>
				</div>
			</div>
		</div>
	</section>
	
	<section class="no-padding" id="portfolio">
		<div class="container-fluid">
			<div id="myCarousel" class="carousel slide" data-ride="carousel">
				{#TODO : Faire Boucle pour l'indicateur#}
				{#<!-- Indicators -->
				<ol class="carousel-indicators">
					<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
					<li data-target="#myCarousel" data-slide-to="1"></li>
					<li data-target="#myCarousel" data-slide-to="2"></li>
				</ol>#}
				
				<!-- Wrapper for slides -->
				<div class="carousel-inner">
					<div class="item active">
						<img src="{{ asset('bundles/seo/assets/img/portfolio/fullsize/ninja.jpg') }}" alt="ninja-code">
					</div>
					{% for article in articles %}
					<div class="item">
						<img class="img" src="{{ asset('uploads/img/' ~ ( article.medias.src )) }}">
					</div>
					{% endfor %}
				</div>
				
				<!-- Left and right controls -->
				<a class="left carousel-control" href="#myCarousel" data-slide="prev">
					<span class="glyphicon glyphicon-chevron-left"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="right carousel-control" href="#myCarousel" data-slide="next">
					<span class="glyphicon glyphicon-chevron-right"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</section>
	
	<aside class="bg-dark">
		<div class="container text-center">
			<div class="call-to-action">
				<h2>"Link à Définir"</h2>
				<a href="https://wildcodeschool.fr" target="_blank" class="btn btn-default btn-xl sr-button">WCS</a>
			</div>
		</div>
	</aside>
	
	<section id="contact">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<h2 class="section-heading">"Just Do It!"</h2>
					<hr class="primary">
					<p>Ready to start your next project with us? That's great! Give us a call or send us an email and we will get back to you as soon as possible!</p>
				</div>
				<div class="row">
					<div class="col-md-2 col-md-offset-1 text-center">
						<a href="#" target="_blank">
							<i class="fa fa-facebook fa-3x" aria-hidden="true"></i>
						</a>
					</div>
					<div class="col-md-2 text-center">
						<a href="https://github.com/JIM2022" target="_blank">
							<i class="fa fa-github fa-3x" aria-hidden="true"></i>
						</a>
					</div>
					<div class="col-md-2 text-center">
						<a href="https://twitter.com/JimGroot44" target="_blank">
							<i class="fa fa-twitter fa-3x" aria-hidden="true"></i>
						</a>
					</div>
					<div class="col-md-2 text-center">
						<a href="https://fr.linkedin.com/in/jeremy-lemarinier-41a055aa" target="_blank">
						<i class="fa fa-linkedin-square fa-3x" aria-hidden="true"></i>
						</a>
					</div>
					<div class="col-md-2 text-center">
						<a href="mailto:jeremy.lemarinier@gmail.com">
							<i class="fa fa-envelope-o fa-3x sr-contact"></i>
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>
	{% block footer %}
		<footer class="footer">
			<div class="container">
				<img id="copyright" style="width: 30px; height: 30px;" src="{{ asset('bundles/seo/assets/img/copyright-xxl.png')}}">
				<span class="text-muted">Copyright Jérémy Lemarinier</span>
			</div>
		</footer>
	{% endblock %}
{% endblock %}